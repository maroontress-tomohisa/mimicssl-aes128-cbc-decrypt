{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Test",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/local/bin/ctest",
            "args": ["--test-dir", "build"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build"
        }
    ]
}